<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.setblue.invoice" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".application.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait">

        </activity>
        <activity android:name=".LoginActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait">


        </activity>
        <activity android:name=".SignupActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait"/>
        <activity android:name=".ClientListActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ClientDetailActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".InvoiceListActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".InvoiceDetailActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".InvoiceItemActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait"/>
        <activity android:name=".InvoicePreviewActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ForgotPasswordActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait"/>
        <activity android:name=".EditClientActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait"/>
        <activity android:name=".EditInvoiceActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait"/>
        <activity android:name=".CreateCompanyActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait"/>
        <activity android:name=".CompanyListActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait"/>
        <activity android:name=".CompanyDetailActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait"/>
    </application>

</manifest>